<br>
<table class="table table-striped table-loans">
	<tbody>
		{{#items}}
		<tr {{ data 'value'}}>
			<td>
				<div class="col-md-9">
	        		<div class="loan-wrapper">
			        	&nbsp;<i class="fa fa-book fa-lg"></i>&nbsp;&nbsp;&nbsp;
			        	<span class="title">
			        		{{book.title}}
			        	</span>
		        		&nbsp;&nbsp;
			            {{#book.authors}}
			             - {{name}} {{lastName}} 
			        	{{/book.authors}}
				        {{#book.subjects}}
				        <p>
					  		{{#book.subjects}}
				             <span class="label label-default">{{description}}</span>&nbsp;
				        	{{/book.subjects}}
						  
	        				{{#book.categories}}
				             <span class="label label-info" title="{{description}}">{{name}}</span>&nbsp;
				        	{{/book.categories}}
				        </p>
				        {{/book.subjects}}

					    <hr>
						
						<div class="details">
			    			<label><i class="fa fa-user"></i>&nbsp;</label>
				        		{{member.lastName}}, {{member.name}}&nbsp;&nbsp;&nbsp;&nbsp;
					        <label><i class="fa fa-phone"></i>&nbsp;</label>
					        	{{member.telephone}}&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
				        	<label><i class="fa fa-home"></i>&nbsp;</label>
				        		{{member.address}}&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
				        	<label><i class="fa fa-envelope"></i>&nbsp;</label>
				        		{{member.email}}&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
				        </div>
			        </div>
				</div>
				<div class="col-md-3">
					<label class="footer-left">VENCE EN...</label>
					<span class="date-wrapper alert alert-warning pull-right">
						4 hs
					</span>
					<span class="btn-group pull-right">
				        <button class="btn btn-default btn-sm btn-detail" title="Editar el prestamo">
				        	<i class="fa fa-edit fa-lg"></i>
				        </button>
				        <button class="btn btn-primary btn-sm" data-toggle="modal" data-target="#modal-diagram" title="Devolver el libro, se finalizarÃ¡ el prestamo">
				        	<i class="fa fa-ok fa-lg"></i> Devolver
				        </button>
				    </span>
				</div>
			</td>
		</tr>
		{{/items}}
	</tbody>
</table>